def approximation_pi_sur_4_avec_precison(p):
    """ p:precision
    """
    s=1
    r=4/3
    i=1
    while r-1>p:
        i=i+1
        s=s*r
        r=(4*i**2)/(4*i**2-1)
    return s,i


