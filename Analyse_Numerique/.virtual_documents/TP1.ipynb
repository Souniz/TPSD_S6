def approximation_pi_sur_4_avec_precison(p):
    """ p:precision
    """
    s=0
    r=2/3
    i=0
    while r>p:
        i=i+1
        s=s+r
        r=(2/((4*i+1)*(4*i+3)))
    return s,i


